{
  "name": "ecommerce-shop",
  "version": "1.0.0",
  "description": "e-commerce application",
  "main": "index.js",
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "dev": "nodemon --watch src --exec babel-node ./src/index.js",
    "pretest": "NODE_ENV=test rm -rf dist && npm run build",
    "test": "NODE_ENV=test nyc --reporter=html --reporter=text mocha dist/test/**/ --timeout 5000 --exit",
    "build": "NODE_ENV=production babel src -d dist --copy-files",
    "start": "NODE_ENV=production node dist/index.js",
    "test:watch": "jest --no-cache  --detectOpenHandles --runInBand --watch"
  },
  "keywords": [
    "ecommerce",
    "nodejs",
    "express",
    "caching"
  ],
  "dependencies": {
    "@babel/polyfill": "^7.8.7",
    "@sendgrid/mail": "^6.5.5",
    "axios": "^0.19.2",
    "bcrypt": "^3.0.8",
    "body-parser": "^1.18.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "express-winston": "^3.4.0",
    "faker": "^4.1.0",
    "fancy-log": "^1.3.3",
    "helmet": "^3.22.0",
    "jsonwebtoken": "^8.5.1",
    "mailgen": "^2.0.10",
    "morgan": "^1.10.0",
    "mysql2": "^1.7.0",
    "nodemon": "^1.19.4",
    "redis": "^2.8.0",
    "sequelize": "^5.21.6",
    "sequelize-cli": "^5.5.1",
    "stripe": "^6.28.0",
    "uniqid": "^5.2.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.0",
    "axios-mock-adapter": "^1.18.1",
    "babel-jest": "^24.9.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.0.11",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "jest": "^24.9.0",
    "mocha": "^10.2.0",
    "nyc": "^14.1.1",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2"
  }
}
